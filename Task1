using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace mk2OOP
{
    class Program
    {
        static void Main(string[] args)
        {
            int[] array = new int[5]; // Створюємо масив
            Random rand = new Random(); // Функція рандому
            for (int i = 0; i < array.Length; i++)
                array[i] = rand.Next(5, 120); // Діапазон випадкових значень
            int minValue = array.Min(); // Знаходження мінімального значення
            int maxValue = array.Max(); // Знаходження максимального значення
            int midValue = array.Sum()/array.Length; // Пошук середнього значення
            var Average = array.OrderBy(v => Math.Abs((long)v - midValue)).First(); // Пошук найближчого значення до середнього значення
            Console.WriteLine("Average:");
            Console.WriteLine(string.Join(",", Average));
            Console.WriteLine("MaxValue");
            Console.WriteLine(string.Join(",", maxValue));
            Console.WriteLine("MinValue");
            Console.WriteLine(string.Join(",", minValue));
            Console.WriteLine("Array:");
            Console.WriteLine(string.Join(",", array));
            Console.ReadKey();
        }
    }
}
